[Unit]
Description=Odoo Server

[Service]
User=pi
WorkingDirectory=/home/pi/odoo
ExecStart=/home/pi/odoo/odoo.py --pidfile=posbox.pid -c /home/pi/odoo/posbox/posbox.conf --load=web,hw_posbox_homepage
ExecStartPre=/usr/bin/sudo  ./posbox/warmup.sh
PIDFile=/home/pi/odoo/posbox.pid
Restart=always
RestartSec=10
# Type=forking

[Install]
WantedBy=multi-user.target
